{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "RollbackRules",
    "type": "object",
    "required": ["rules", "reports_fixed"],
    "properties": {
      "version": { "type": ["integer", "string"] },
      "description": { "type": ["string", "null"] },
      "reports_fixed": {
        "type": "array",
        "items": { "type": "string" }
      },
      "rules": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "required": ["clears"],
          "properties": {
            "clears": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
  